class student
{
    char *name;
    int len, roll;

public:
    student(char *p,int rol,int ln)
    {
        roll = rol;
        len = ln;
        name = new char[len];
        for (int i = 0; i < len; i++)
        {
            name[i] = p[i];
        }
        
    }
    void display()
    {
        cout << "from student class:" << endl;
        cout << "name : " << name << "  ,roll: " << roll  << endl;
    }
    friend void operator++(student& ,int );
    ~student()
    {
    }
};

void operator++(student & s, int z)
{
    for (int i = 0; i < strlen(s.name); i++)// **** strlen because we used char pointer for name 
        ++s.name[i];
}

int main()
{
    student s1("CPP", 3, 64);
    // s1++ doesnt work if we want to do that we have use a dummy value as parameter..  //void operator++(student & s, int z) // int z -> dummy value
    s1++;// ++s1 will work after removing dummy value
    s1.display();
    return 0;
}
