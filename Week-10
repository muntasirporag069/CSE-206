class Person
{
    string id;
protected:
    string email;
public:
    string name;
    Person(string name,string id,string email)
    {
        this->name = name;
        this->id = id;
        this->email = email;
    }
    void display()
    {
        cout << "\tPerson info:" << endl;
        cout << "Name :" << name << "\nID: " << id
             << "\nEmail: " << email << endl;
    }
};



class Employee: public Person
{
    double basicSalary;
protected:
    double bonous;
public:
    Employee (string name,string id,string email,double bs,double bn): Person(name,id,email)
    {
        basicSalary = bs;
        bonous = bn;
    }
    double getSalary()
    {
        return basicSalary + bonous;
    }
    void display()
    {
        Person::display();
        cout << "\tEmployee info:\n";
        cout << "Basic Salary: " << basicSalary << " \nBonous :" << bonous << endl;
    }
};




class Student: protected Person
{
    double gpa;
protected:
    double fee;
    void display()
    {
        Person::display();
        cout << "\tStudent info:\n";
        cout << "GPA: " << gpa << " ,\nFee: " << fee << endl;
    }
public:
    Student(string name,string id,string email,double gpa,double fee): Person(name,id,email)
    {
        this->gpa = gpa;
        this->fee = fee;
    }
    double getFee()
    {
        return fee;
    }
    void protected_dispaly()
    {
        display();
    }
};



class Staff_Officers: public Student,public Employee
{
protected:
    string designation;
    void displaySt()
    {
        Student::display();
    }
public:
    Staff_Officers(string name,string id,string email,string designation,double bs,double bn,double gpa,double fee):Student(name,id,email,gpa,fee),Employee (name,id,email, bs, bn)
    {
        this->designation = designation;
    }
    double getSal()
    {
        return getSalary() - fee;
    }
    void protected_display_std_from_employ()
    {
        displaySt();
    }
    void  displayEmployee()
    {
        Employee::display();
    }
};


class PG_Student: private Student
{
    double thesis_marks;
    void display()
    {
        Student::display();

        cout << "\tPG_student info\n";
        cout << "thesis marks : " << thesis_marks << endl;
    }
public:
    PG_Student(string name,string id,string email,double gpa,double fee,double tm):Student(name,id,email,gpa,fee)
    {
        thesis_marks = tm;
    }
    void private_display_pgst()
    {
        display();
    }

};

int main()
{
    Person p1("sss", "40404", "ss@.cm");
    p1.display();
    Employee e1("ddd", "555", "dd@.cm", 5.66, 8.88);
    e1.display();
    cout << endl
         << endl
         << endl;

    Student s1("ddd", "555", "dd@.cm", 5.66,888.99 );
    s1.protected_dispaly();
    cout << endl
         << endl
         << endl;

    Staff_Officers so1("ddd", "555", "dd@.cm", "mrakhaoa", 5.66, 8.88, 3.99, 50000.84);
    so1.protected_display_std_from_employ();
    so1.displayEmployee();
    cout << endl
         << endl
         << endl;

    PG_Student pg1("ddd", "555", "dd@.cm", 5.66, 888.99, 90.1);
    pg1.private_display_pgst();

    return 0;
}
